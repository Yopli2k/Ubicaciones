<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="id" readonly="true" />
        </column>
        <column name="product-code" display="none" order="100">
            <widget type="text" fieldname="idproduct" readonly="true" />
        </column>
        <column name="reference" numcolumns="2" order="110">
            <widget type="autocomplete" fieldname="reference" readonly="dinamic">
                <values source="variantes" fieldcode="referencia" />
            </widget>
        </column>
        <column name="description" numcolumns="6" order="120">
            <widget type="text" fieldname="productname" readonly="true" />
        </column>
        <column name="quantity" numcolumns="1" order="200">
            <widget type="number" fieldname="quantity" min="0" required="true" />
        </column>
        <column name="stockmin" title="min" numcolumns="1" order="210">
            <widget type="number" fieldname="stockmin" min="0" required="true" />
        </column>
        <column name="stockmax" title="max" numcolumns="1" order="220">
            <widget type="number" fieldname="stockmax" min="0" required="true" />
        </column>
    </columns>
</view>